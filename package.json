{
  "name": "@adddog/monorepo-consistency",
  "version": "0.0.7",
  "type": "module",
  "bin": {
    "mono": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "types": "tsc -p tsconfig.typecheck.json",
    "knip": "knip",
    "dev": "tsx src/cli.ts",
    "release": "bumpp --yes --no-push --release patch",
    "generate-schema": "tsx scripts/generate-schema.ts",
    "prepublishOnly": "pnpm run test && pnpm run lint && pnpm run types && pnpm run build",
    "prepack": "pnpm run prepublishOnly",
    "build:watch": "unbuild --watch",
    "test": "vitest run"
  },
  "dependencies": {
    "@adddog/zod-to-json-schema": "^0.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "fast-glob": "^3.3.3",
    "get-tsconfig": "^4.12.0",
    "lodash": "^4.17.21",
    "minimatch": "^10.0.3",
    "ora": "^9.0.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.12",
    "zx": "^8.8.4"
  },
  "devDependencies": {
    "@adddog/build-configs": "^0.0.1",
    "@adddog/config-defaults": "^0.0.3",
    "@adddog/eslint": "^0.0.6",
    "@rad/config": "workspace:*",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.7.2",
    "@vue/compiler-sfc": "^3.5.22",
    "bumpp": "^10.3.1",
    "eslint": "^9.37.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1"
  },
  "engines": {
    "node": ">= 22",
    "pnpm": ">= 10",
    "npm": ">= 11"
  },
  "publishConfig": {
    "access": "public"
  }
}
